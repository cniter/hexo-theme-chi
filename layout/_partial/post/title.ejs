<header class="article-header">
    <div class="article-title <%= class_name %>">
        <% if (item.link) { %>
        <a class="<%= class_name %>" href="<%- url_for(item.link) %>" target="_blank" itemprop="url">
            <%= item.title %>
        </a>
        <% } else if (item.title) { %>
        <a class="<%= class_name %>" href="<%- url_for(item.path) %>">
            <%= item.title %>
        </a>
        <% } %>
    </div>
</header>