<div>
    <h1>
        <i class="fa fa-tags"></i>
        <%= page.title %>
    </h1>
</div>

<div>
<% if (site.tags.length) { %>
    <div>
        <ul>
            <% site.tags.sort('name').each(function(item) { %>
            <li>
                <a href="#<%= item.name %>">
                    <%= item.name %>
                    <span>
                        <%= item.posts.length %>
                    </span>
                </a>
            </li>
            <% }); %>
        </ul>
    </div>
    <div>
    <% site.tags.sort('name').each(function(item) { %>
    <h4> <%= item.name %> </h4>
        <ul>
        <% site.posts.sort('date', -1).forEach(function(it) { %>
            <% if (it.tags.length >= 1) { %>
                <% it.tags.data.forEach(function(data) { %>
                    <% if (data._id == item._id) { %>
                    <li>
                        <a href="<%= url_for(it.path) %>" 
                        <% if (it.description) { %> 
                            title="<%= it.description %>" 
                        <% } %> >
                            <%= it.title %>
                        </a>
                    </li>
                    <% } %>
                <% }); %>
            <% } %>
        <% }); %>
        </ul>
    </h4>
    <% }); %>
    </div>
<% } %>
</div> 