.archive-year-wrap {
    padding: 30px 15px;
    font-size: 26px;
    text-align: center;
    color: $font-color--hover;
    border-left: 5px solid $font-color--head;
    position: relative;
    display: block;
    border-bottom: 4px solid #2f2f2f;

    &:before {
        content: ' ';
        position: absolute;
        left: 0;
        top: 50%;
        margin-left: -6px;
        margin-top: -4px;
        width: 7px;
        height: 7px;
        background: $font-color--hover;
        border-radius: 50%;
    }

    &:hover {
        color: $font-color--head;

        &:before {
            margin-left: -7px;
            width: 9px;
            height: 9px;
            background: $font-color--hover;
            border-radius: 50%;
        }
    }
}


.archive-content {
    border-bottom: 2px solid #2f2f2f;
}