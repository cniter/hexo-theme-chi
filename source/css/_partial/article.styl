.article {
}

.article-header {
    border-left: 5px solid $font-color--head;
    padding: 15px;
    font-size: 26px;
    color: $font-color--head;

    &:hover {
        border-left: 5px solid $font-color--hover;
    }

    section {
        // display: inline;
    }

    .article-title--post {
        text-align: center;
    }

    .article-date.article-title--post {
        display: none;
    }

    .article-date {
        float: right;
    }
}

.article-content {
    line-height: 1.8em;
    padding-right: 30px;
    padding-left: 30px;

    p {
        margin-top: 10px;

        // mathjax公式超出页面部分滚动
        span.math.display {
	        overflow: auto;
	        display: block;
        }
    }

    a {
        color: $font-color--head;
    }
}

.article-content--excerpt {
    display: block;
}

.article-content--all {
    display: none;
}


.article-content-more {
    text-align: center;

    .article-more--link {
        width: 100%;
        color: #4298cc;
        font-size: 1.25rem;
        line-height: 1;
        background-color: rgba(153, 153, 153, 0.2);
        border: 1px solid transparent;
        border-radius: .25rem;

        &:focus {
            outline: none;
        }
    }
}

