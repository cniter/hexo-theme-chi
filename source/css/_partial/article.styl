.article {
}

.article-content {
    line-height: 1.8em;
    padding-right: 30px;
    padding-left: 30px;

    p {
        margin-top: 10px;

        // mathjax公式超出页面部分滚动
        span.math.display {
            overflow: auto;
            display: block;
        }

        a {
            color: $font-color--head;
            border: dashed 1px #000;
            padding: 0px 8px;
            border-radius: 5px;
            background-color: #2F2E2E;
            word-wrap: break-word;
            word-break: break-all;
            white-space: pre-wrap;
            margin: 2px;
            display: inline-block;
        }

        a.fancy-ctn.fancybox::before {
            display: none;
        }

        a::before {
            padding-right: 6px;
            content: '\f0c1';
            font: normal normal normal 14px / 1 ForkAwesome;
        }

        a:hover {
            color: #FFF;
        }

        a.footnote-ref {
            border: none;
            margin: 0;
            padding: 0;
            background: inherit;

            &:before {
                display: none;
            }
            
            sup {
                &:before {
                    content: '[';
                }

                &:after {
                    content: ']';
                }
            }
        }

        del {
            background-color: #000;
            color: #000;

            code {
                color: #000;
                background-color: #000;
            }

            &:hover {
                background-color: $back-color--body;
                color: $font-color--article;

                code {
                    color: $font-color--article;
                    background-color: #002b36;
                }
            }
        }
    }

    a {
        color:#4094c7;
    }

    code {
        margin: 0 3px;
        border: dashed 1px #000;
        color: #999;
        padding: 1px 8px;
        font-size: 90%;
        -webkit-border-radius: 5px;
        border-radius: 5px;
        font-family: Consolas, 'Courier New', Courier;
        text-shadow: none;
        background-color: #002b36;
        word-wrap: break-word;
        white-space: pre-wrap;
    }
    
    h1 {
        font-size: 1.5em;
        margin-top: 30px;
    }

    h2 {
        font-size: 1.3em;
        font-weight: 300;
        padding-bottom: 5px;
        margin: 0.5em auto;
        font-weight: 700;
        color: $font-color--head;
        padding-bottom: 5px;
        text-align: center;

        &:after, &:before {
            content: ' —— ';
        }
    }

    h3 {
        font-size: 1.2em;
        margin: 0.5em auto;
        color: $font-color--head;
        background: rgba(0, 0, 0, 0.27);
        border: 1px dashed #020202;
        padding: 0.2em 0.6em;
        font-weight: normal;
        border-radius: 6px;
        
        &:hover {
            &:before {
                content: ' § ';
            }
        }
    }

    h4 {
        font-size: 1.1em;
        margin: 0.5em auto;
        color: $font-color--head;
        background: #5A5A5A;
        border: 1px dashed #020202;
        padding: 0.2em 0.6em;
        font-weight: normal;
        -webkit-border-radius: 6px;
        border-radius: 6px;
    }

    h5 {
        font-size: 1.1em;
        margin: 0.5em auto;
        color: $font-color--head;
        background: #8E8D8D;
        border: 1px dashed #020202;
        padding: 0.2em 0.6em;
        font-weight: normal;
        -webkit-border-radius: 6px;
        border-radius: 6px;
    }

    h6 {
        font-size: 1.1em;
        margin: 0.5em auto;
        color: $font-color--head;
        border: 1px dashed #020202;
        padding: 0.2em 0.6em;
        font-weight: normal;
        -webkit-border-radius: 6px;
        border-radius: 6px;
    }

    hr {
        background-color: #2f2f2f;
        height: 3px;
        border: 0;
        margin: 10px 0;
    }

    blockquote {
        background-color: #555;
        padding: 10px 15px;
        word-break: break-word;
        margin: 10px 0px;
        border-left: 4px solid #2f2f2f;
        border-top: 1px dashed #000;
        border-right: 1px dashed #000;
        border-bottom: 1px dashed #000;
        border-radius: 5px;
        -webkit-box-sizing: border-box;
        -moz-box-sizing: border-box;
        box-sizing: border-box;

        p {
            margin-top: 0;
        }
    }

    strong {
        font-weight: bold;
    }

    em {
        font-style: italic;
    }

    ul,ol {
        font-size: 14px;
    }    

    ul {
        list-style: none;
        margin-left: 10px;

        > li {
            list-style: none;
            margin-left: 10px;

            &:before {
                content: '\f05d';
                font: normal normal normal 14px / 1 ForkAwesome;
                display: inline-block;
                margin: 0 10px;
                line-height: 28px;
            }
        }
    }
    
    ol {
        list-style: decimal;
        margin-left: 10px;

        > li {
            list-style: decimal;
            margin: 0 10px;
        }
    }

    li:hover {
        background-color: #2E2E2E;
    }

    li {
        ul {
            list-style: none;
            margin-left: 10px;

            li:before {
                content: '\f05d';
                font: normal normal normal 14px / 1 ForkAwesome;
                display: inline-block;
                margin: 0 10px;
                line-height: 28px;
            }
        }

        ol {
            list-style: decimal;
            margin-left: 10px;
        }
    }

    table {
        width: 100%;
        border: 1px solid #dedede;
        margin: 20px 0;
        color: #FFF;
        border-collapse: collapse;

        tr, td {
            height: 35px;
        }

        thead {
            tr {
                background: #2D2D2D;
            }
        }

        tbody {
            tr:hover {
                background: #151414;
            }
        }

        td, th {
            border: 1px solid #020202;
            padding: 0 10px;
        }
    }

    figure {
        table {
            border: none;
            width: auto;
            margin: 0;

            tbody {
                tr:hover {
                    background: none;
                }
            }
        }
    }

}

.article-content--excerpt {
    display: block;
}

.article-content--all {
    display: none;
}


.article-content-more {
    text-align: center;
    width: 100%;
    
    &:hover {
        margin-top: 6px;
        padding-top: 16px;
        background-image: -webkit-radial-gradient(50% 30% ellipse at top, $font-color--head,rgba(153,153,153,0));
        background-image: radial-gradient(50% 30% ellipse at top, $font-color--head,rgba(153,153,153,0));
        border-radius: .25rem;
    }

    .article-more--link {
        width: 100%;
        color: $font-color--head;
        font-size: 1rem;
        line-height: 1;
        background-color: rgba(153, 153, 153, 0);
        border: 1px solid transparent;
        border-radius: .25rem;

        &:focus {
            outline: none;
        }

        &:hover {
            color: $font-color--hover;
        }
    }
}

