#article-nav {
    margin: 80px 0 30px 0;
    padding-bottom: 10px;

    .article-nav-link-wrap {
        margin: 0px 15px 0px 15px;
        font-size: 14px;
        color: #333;

        .article-nav-title {
            display: inline-block;
            font-size: 1rem;
            color: #268fb8;
            transition: color 0.3s;
        }

        strong {
            background: #999;
            color: #fff;
            border-radius: 100%;
            width: 15px;
            height: 15px;
            display: inline-block;
            text-align: center;
            transition: background 0.3s;
        }

        &:hover {
            strong {
                background: #248EB7;
            }

            .article-nav-title {
                color: #FFF;
            }
        }
    }

    #article-nav-older {
        float: right;
    }
}
