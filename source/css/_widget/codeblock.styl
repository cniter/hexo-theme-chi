.highlight-wrap[data-lang] {
    margin: 10px auto;
    position: relative;
    overflow: hidden;
    border-radius: 5px;
    box-shadow: 0 10px 30px 0px rgba(0, 0, 0, 0.4);
    outline: none;

    ::-webkit-scrollbar {
        height: 10px;
    }

    ::-webkit-scrollbar-track {
        -webkit-box-shadow: inset 0 0 6px rgba(0, 0, 0, 0.3);
        border-radius: 10px;
    }

    ::-webkit-scrollbar-thumb {
        border-radius: 10px;
        -webkit-box-shadow: inset 0 0 6px rgba(0, 0, 0, 0.5);
    }

    * {
        position: static;
    }

    &::before {
        content: attr(data-lang);
        height: 38px;
        line-height: 38px;
        background: #21252b;
        color: #fff;
        font-size: 16px;
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        font-family: 'Source Sans Pro', sans-serif;
        font-weight: bold;
        padding: 0px 80px;
        padding-right: 0;
        text-indent: 15px;
        float: left;
    }

    &::after {
        content: ' ';
        position: absolute;
        -webkit-border-radius: 50%;
        border-radius: 50%;
        background: #fc625d;
        width: 12px;
        height: 12px;
        top: 0;
        left: 20px;
        margin-top: 13px;
        -webkit-box-shadow: 20px 0px #fdbc40, 40px 0px #35cd4b;
        box-shadow: 20px 0px #fdbc40, 40px 0px #35cd4b;
        z-index: 3;
    }

    &:hover {
        &::before {
            content: attr(data-lang) "　\f0ea  复制";
            font-family: 'Source Sans Pro', sans-serif, ForkAwesome;
        }
    }

    .code {
        width: 100%;
    }

    .highlight pre {
        padding-top: 30px;
        background-color: #2d2d2d;
    }
}