@media (max-width: 767px) {
    #sidebar, #sidebar-sticky--bottom {
        display: none;
    }

    .scroll {
        margin-left: -30px; 
    }

    #footer {
        .copyright-info {
            float: none;
        }

        .site-info {
            float: none;
        }
    }
}

@media (max-width: 479px) {
    #site-title {
        a {
            img {
                display: none;
            }

            span {
                font-size: 30px;
            }
        }
    }
}
