@import "nib"
@import "_variables"

global-reset()

@font-face {
    font-family: "Allura";
    src: local("Allura"),
         url("/fonts/Allura-Regular.woff") format("woff"),
         url("/fonts/Allura-Regular.ttf") format("truetype");
}

html, body {
    height: 100%;
    width: 100%;
	scroll-behavior: smooth;	// 平滑的切换或滚动页面
}

html {
    font-family: sans-serif;
    -ms-text-size-adjust: 100%;
    -webkit-text-size-adjust: 100%;
}

body {
    margin: 0;
    font-family: $font-family--body;
    font-size: 16px;
    color: $font-color--article;
    background: $back-color--body;
    word-wrap: break-word;	// 自动换行
    // word-break: break-all;	// 强制英文单词换行
	// white-space: pre-wrap;	// 保留文本空白序列，并正常换行
}

header, main, section, footer, aside, nav, article, figure {
    display: block;
}

a {
    color: inherit;
    text-decoration: none;

    &:hover {
        color: $font-color--hover;
        text-decoration: none;
    }
}

img, object, video { 
	max-width: 100%;
}

.div-border {
    margin-bottom: 20px;
    padding-bottom: 20px;
    border: 1px solid $back-color--border;
    box-shadow: 4px 4px 18px rgba(0, 0, 0, 0.46);
    border-radius: 6px;
}


#pagination--nav {
	text-align: center;
	margin-top: 30px;
	.page-number{
		width: 20px;
		height: 20px;
		background: $back-color--border;
		-webkit-border-radius: 50%;
		-moz-border-radius: 50%;
		border-radius: 50%;
		display: inline-block;
		color: $font-color--hover;
		line-height: 20px;
		font-size: 12px;
		margin: 0 3px 30px;
		&:hover{
			background: $back-color--hover;
		}
	}
	.current{
		background: $font-color--head;
		cursor: default;
		&:hover{
			background: $font-color--head;
		}
	}
	.extend{
		color: $font-color--article;
		margin: 0 27px;
		opacity: 0;
		&:hover{
			color: $font-color--hover;
		}
	}
	&:hover{
		.extend{
			opacity: 1;
		}
	}
}

#sidebar {
	.author-info {
		padding: 15px;
		text-align: center;

		.header-avatar {
			width: 50%;
			height: 50%;
			border-radius: 50%;
			box-shadow: 0 0 0 2px rgba(255, 255, 255, 0.5), 0 2px 20px 3px rgba(0, 0, 0, 0.25);
		}

		.header-author {
			margin-top: 10px;
			color: $font-color--head;
			font-family: $font-family--head;
			font-size: 30px;
			font-weight: 700;

			&:hover {
				color: $font-color--hover;
			}
		}

		.header-slogan {
			margin-top: 10px;
			color: $font-color--hover;
		}

		.social-info {
			margin-top: 10px;
			text-align: center;

			.social-icon {
				width: 28px;
				height: 28px;
				margin: 10px 8px;
				text-align: center;
				font-size: 20px;
				line-height: 26px;
				color: $font-color--head;
				vertical-align: middle;
				border: 1px solid $font-color--hover;
				border-radius: 50%;
				display: inline-block;

				&:hover {
					color: $font-color--hover;
					border: 1px solid #00abff;
				}
			}
		}
	}

	// 搜索
	.search {
		padding: 15px;
		text-align: center;

		#search-form {
			// 搜索输入框
			#local-search--input {
				width: 80%;
				margin-top: 1px;
				color: #FFF;
				padding: 0;
				font-family: inherit;
				border: 2px solid transparent;
				border-bottom: 2px solid #d3d3d3;
				border-radius: 2px;
				opacity: 0.65;
				background: none;
				outline: medium;

				&:hover {
					border: 2px solid lightgray;
					opacity: 1;
					box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
				}
			}

			// 搜索重置按钮
			.fa-times {
				display: none;
				padding: 1px 0.7em;
				box-shadow: 0 0 3px rgba(0, 0, 0, 0.15);
				cursor: pointer;
				color: #4094c7;

				&:active {
					background: #d3d3d3;
				}

				&:hover {
					zoom: 1.1;
					padding: 1px 0.6em;
					border: 1px solid #d3d3d3;
					box-shadow: 0 0 6px rgba(0, 0, 0, 0.25);
				}
			}
		}

		#local-search--result {
			margin-top: 8px;
			font-size: 0.9em;
			text-align: left;
			word-break: break-all;
			box-shadow: 0px 0px 6px 2px rgba(0, 0, 0, 0.46);
			border-radius: 6px;

			/* 单条搜索结果 */
			ul.search-result--list li {
				padding: 0.5em;
				border-bottom: 2px solid #d3d3d3;

				&:hover {
					background: rgba(47, 46, 46, 0.8);
					box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
				}
			}

			/* 匹配的标题 */
			a.search-result--title {
				line-height: 1.2;
				font-weight: bold;
				color: #4094c7;
			}

			/* 搜索预览段落 */
			p.search-result {
				margin: 0.4em auto;
				line-height: 1.2em;
				max-height: 3.6em;
				overflow: hidden;
				font-size: 0.8em;
				text-align: justify;
				color: #ffffffb3;
			}

			/* 匹配的关键词 */
			em.search-keyword {
				color: #f58e90;
				border-bottom: 1px dashed #f58e90;
				font-weight: bold;
				font-size: 1em;
			}
		}

		/* 无匹配搜索结果时显示 */
		p.no-result {
			display: none;
			margin: 2em 0;
			padding-bottom: 0.5em;
			text-align: left;
			color: #4094c7;
			font-family: font-serif serif;
			border-bottom: 2px solid #d3d3d3;
		}
	}
}





