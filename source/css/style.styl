@import "nib"
@import "_variables"

global-reset()

@font-face {
    font-family: "Allura";
    src: local("Allura"),
         url("/fonts/Allura-Regular.woff") format("woff"),
         url("/fonts/Allura-Regular.ttf") format("truetype");
}

html, body {
    height: 100%;
    width: 100%;
	scroll-behavior: smooth;	// 平滑的切换或滚动页面
}

html {
    font-family: sans-serif;
    -ms-text-size-adjust: 100%;
    -webkit-text-size-adjust: 100%;
}

body {
    margin: 0;
    font-family: $font-family--body;
    font-size: 16px;
    color: $font-color--article;
    background: $back-color--body;
    word-wrap: break-word;	// 自动换行
    // word-break: break-all;	// 强制英文单词换行
	// white-space: pre-wrap;	// 保留文本空白序列，并正常换行
}

header, main, section, footer, aside, nav, article, figure {
    display: block;
}

a {
    color: inherit;
    text-decoration: none;

    &:hover {
        color: $font-color--hover;
        text-decoration: none;
    }
}

img, object, video { 
	max-width: 100%;
}

.div-border {
    margin-bottom: 20px;
    padding-bottom: 20px;
    border: 1px solid $back-color--border;
    box-shadow: 4px 4px 18px rgba(0, 0, 0, 0.46);
    border-radius: 6px;
}


#pagination--nav {
	text-align: center;
	margin-top: 30px;
	.page-number{
		width: 20px;
		height: 20px;
		background: $back-color--border;
		-webkit-border-radius: 50%;
		-moz-border-radius: 50%;
		border-radius: 50%;
		display: inline-block;
		color: $font-color--hover;
		line-height: 20px;
		font-size: 12px;
		margin: 0 3px 30px;
		&:hover{
			background: $back-color--hover;
		}
	}
	.current{
		background: $font-color--head;
		cursor: default;
		&:hover{
			background: $font-color--head;
		}
	}
	.extend{
		color: $font-color--article;
		margin: 0 27px;
		opacity: 0;
		&:hover{
			color: $font-color--hover;
		}
	}
	&:hover{
		.extend{
			opacity: 1;
		}
	}
}

#sidebar {
	.author-info {
		padding: 15px;
		text-align: center;

		.header-avatar {
			width: 50%;
			height: 50%;
			border-radius: 50%;
			box-shadow: 0 0 0 2px rgba(255, 255, 255, 0.5), 0 2px 20px 3px rgba(0, 0, 0, 0.25);
		}

		.header-author {
			margin-top: 10px;
			color: $font-color--head;
			font-family: $font-family--head;
			font-size: 30px;
			font-weight: 700;

			&:hover {
				color: $font-color--hover;
			}
		}

		.header-slogan {
			margin-top: 10px;
			color: $font-color--hover;
		}

		.social-info {
			margin-top: 10px;
			text-align: center;

			.social-icon {
				width: 28px;
				height: 28px;
				margin: 10px 8px;
				text-align: center;
				font-size: 20px;
				line-height: 26px;
				color: $font-color--head;
				vertical-align: middle;
				border: 1px solid $font-color--hover;
				border-radius: 50%;
				display: inline-block;

				&:hover {
					color: $font-color--hover;
					border: 1px solid #00abff;
				}
			}
		}
	}
}





